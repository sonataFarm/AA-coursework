<!DOCTYPE html>
<html>
  <head>
    <title>Muzak</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav>
        <% if logged_in? %>
        <section class="nav-left">
          <ul>
            <li><%= link_to "Bands (to make her dance)", bands_url %> </li>
          </ul>
        </section>
        <% end %>
        <section class="nav-right">
          <ul>
            <% if logged_in? %>
              <li><%= current_user.email %></li>
              <li><%= button_to "Log out Muzak", session_url, method: 'delete' %></li>
            <% else %>
              <li><%= button_to "Sign Into Your Muzak Account", login_url, method: 'get' %></li>
            <% end %>

          </ul>
        </section>
      </nav>


    </header>

    <%= yield %>
  </body>
</html>
